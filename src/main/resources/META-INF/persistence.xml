<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="order-service">
        <provider>org.hibernate.reactive.provider.ReactivePersistenceProvider</provider>
        
        <class>com.example.user.adapter.out.persistence.entity.UserEntity</class>
        <class>com.example.order.adapter.out.persistence.entity.OrderEntity</class>
        <class>com.example.order.adapter.out.persistence.entity.OrderItemEntity</class>

        <properties>
            <!-- Hibernate Reactive requires specific connection properties -->
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/orders"/>
            <property name="hibernate.connection.user" value="user"/>
            <property name="hibernate.connection.password" value="password"/>
        </properties>
    </persistence-unit>
</persistence>
